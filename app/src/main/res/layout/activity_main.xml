<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#00000000"
    android:textSize="@dimen/abc_search_view_preferred_width"
    android:weightSum="1"
    android:baselineAligned="true" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Eagle Events"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:textSize="42dp"
        android:textStyle="bold|italic"
        android:textColor="#ff269665" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Master Calendar"
        android:id="@+id/button"
        android:layout_marginTop="104dp"
        android:textColor="#fffcfffd"
        android:textSize="28dp"
        android:longClickable="false"
        android:clickable="true"
        android:onClick="onOpeningCalendar"
        android:layout_centerHorizontal="true"
        android:background="#ff00fff0"
        android:textColorHighlight="#ffffffff"
        android:textStyle="bold" />


</RelativeLayout>